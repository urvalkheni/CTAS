{
  "name": "ctas-backend",
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "@jwt-secret",
    "MONGODB_URI": "@mongodb-uri",
    "CORS_ORIGIN": "https://ctas-frontend.vercel.app"
  },
  "functions": {
    "server.js": {
      "maxDuration": 30
    }
  }
}
