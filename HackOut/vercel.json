{
  "version": 2,
  "buildCommand": "cd frontend && rm -rf node_modules package-lock.json && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install --force",
  "framework": "vite",
  "functions": {
    "app/**/*.js": {
      "runtime": "nodejs22.x"
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "22",
      "NPM_FLAGS": "--force"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
