# Handle optional dependencies properly
optional=false
# Skip optional dependency installation
omit=optional
# Use npm ci for faster, more reliable installs
prefer-offline=true
# Don't audit during install (speeds up deployment)
audit=false
# Ensure we don't rebuild native modules
rebuild-bundle=false
# Force clean installs
force=true
# Skip platform-specific binaries
ignore-scripts=false
# Ensure consistent installations
package-lock=true
